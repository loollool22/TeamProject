<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team.comment.CommentMapper">

	<insert id="insertComment">
		insert into comment(b_num,id,content,c_date) 
		values(#{b_num},#{id},#{content},#{c_date})
	</insert>
	
	<select id="getMaxNum" resultType="java.lang.Integer">
		select max(c_num) from comment
	</select>
	
	<select id="getComment" resultType="com.team.domain.CommentDTO">
		select * from comment where c_num=#{c_num}
	</select>

	<update id="updateComment">
		update comment set content=#{content} where b_num=#{b_num}
	</update>
</mapper>